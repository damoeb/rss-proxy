{
  "name": "@rss-proxy/proxy",
  "version": "0.3.0",
  "private": true,
  "dependencies": {
    "@rss-proxy/core": "file:../core",
    "analytics-node": "^3.4.0-beta.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dompurify": "^2.0.7",
    "express": "^4.16.3",
    "feed": "^4.1.0",
    "jsdom": "^15.2.1",
    "lodash": "^4.17.10",
    "morgan": "^1.10.0",
    "mozilla-readability": "git+https://github.com/mozilla/readability.git",
